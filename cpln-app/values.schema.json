{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "labels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "container": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "env": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": ["name", "value"]
          }
        }
      },
      "required": ["port", "env"]
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": ["name", "tag"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "string"
        },
        "minCPU": {
          "type": "string"
        },
        "memory": {
          "type": "string"
        },
        "minMemory": {
          "type": "string"
        },
        "capacityAI": {
          "type": "boolean"
        }
      },
      "required": ["cpu", "memory", "capacityAI"]
    },
    "probes": {
      "type": "object",
      "properties": {
        "readiness": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "failureThreshold": {
              "type": "integer"
            },
            "initialDelaySeconds": {
              "type": "integer"
            },
            "periodSeconds": {
              "type": "integer"
            },
            "successThreshold": {
              "type": "integer"
            },
            "timeoutSeconds": {
              "type": "integer"
            }
          },
          "required": [
            "path",
            "failureThreshold",
            "initialDelaySeconds",
            "periodSeconds",
            "successThreshold",
            "timeoutSeconds"
          ]
        },
        "liveness": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "failureThreshold": {
              "type": "integer"
            },
            "initialDelaySeconds": {
              "type": "integer"
            },
            "periodSeconds": {
              "type": "integer"
            },
            "successThreshold": {
              "type": "integer"
            },
            "timeoutSeconds": {
              "type": "integer"
            }
          },
          "required": [
            "path",
            "failureThreshold",
            "initialDelaySeconds",
            "periodSeconds",
            "successThreshold",
            "timeoutSeconds"
          ]
        }
      },
      "required": ["readiness", "liveness"]
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "maxConcurrency": {
          "type": "integer"
        },
        "maxScale": {
          "type": "integer"
        },
        "minScale": {
          "type": "integer"
        },
        "scaleToZeroDelay": {
          "type": "integer"
        },
        "target": {
          "type": "integer"
        }
      },
      "required": [
        "maxConcurrency",
        "maxScale",
        "minScale",
        "scaleToZeroDelay",
        "target"
      ]
    },
    "owner": {
      "type": "string"
    },
    "team": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "cpln": {
      "type": "object",
      "properties": {
        "gvc": {
          "type": "string"
        },
        "org": {
          "type": "string"
        }
      },
      "required": ["gvc", "org"]
    }
  },
  "required": ["image", "resources", "probes", "autoscaling", "owner", "team"]
}
